<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="HoneyDoList.ChangePassword" Title="Change Password">
	<ContentPage.Content>
		<StackLayout VerticalOptions="FillAndExpand" WidthRequest="50" HorizontalOptions="FillAndExpand">
			<Label Text="Todo" FontSize="35" TextColor="Black" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" Margin="15"/>
			<Entry x:Name="oldpasswordEntry" Placeholder="Old Password" HeightRequest="40" WidthRequest="200" TextColor="Black" Margin="4"/>
			<Entry x:Name="newpasswordEntry" Placeholder="New Password" HeightRequest="40" WidthRequest="200" TextColor="Black" Margin="4"/>
			<Entry x:Name="verifypasswordEntry" Placeholder="Verify Password" HeightRequest="40" WidthRequest="200" TextColor="Black" Margin="4"/>
			<Button Text="Change Password" Clicked="OnChangePasswordClicked" BackgroundColor="#2C70FF" TextColor="White" BorderRadius="20" Margin="4"/>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
