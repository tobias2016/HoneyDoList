<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="HoneyDoList.ForgetPassword" Title="Forgot Password">
	<ContentPage.Content>
		<StackLayout VerticalOptions="FillAndExpand" WidthRequest="50" HorizontalOptions="FillAndExpand">
			<Label Text="Todo" FontSize="35" TextColor="Black" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" Margin="60"/>
			<Entry x:Name="usermailEntry" Placeholder="Email" HeightRequest="40" WidthRequest="200" TextColor="Black" Margin="4"/>
			<Button Text="Send My Password" Clicked="OnSendMailClicked" BackgroundColor="Blue" TextColor="White" BorderRadius="20" Margin="20"/>
			<Label Text="We have send your password on your adilirshad@hotmail.com" FontSize="13" TextColor="Gray" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
			<Label Text="Please check your mailbox to reset your password." FontSize="13" TextColor="Gray" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
